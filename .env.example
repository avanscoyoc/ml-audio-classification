# Example environment file for Docker Compose
# Copy to .env and customize for your environment

# Google Cloud Platform Settings (REQUIRED)
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=dse-staff
GCP_CREDENTIALS_PATH=./credentials

# Data and Results Paths (will be created automatically)
DATA_PATH=./data
RESULTS_PATH=./results
LOGS_PATH=./logs

# Application Settings
LOG_LEVEL=INFO
MAX_WORKERS=4
AUDIO_SAMPLE_RATE=22050

# ML Settings
RANDOM_SEED=42
DEFAULT_CV_FOLDS=5

# Optional: GPU support (requires nvidia-docker)
# NVIDIA_VISIBLE_DEVICES=all